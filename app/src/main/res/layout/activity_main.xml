<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tx_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="48dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:text="SIRKUS" />

    <RelativeLayout
        android:id="@+id/ly_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="36dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="SENSOR :" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="ADA GERAKAN" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="48dp"

        >
        <LinearLayout
            android:id="@+id/ly_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="SENSOR : " />
            <TextView
                android:id="@+id/tx_nilai_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="-" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_btn_frekuensi"
            android:layout_below="@id/ly_frekuensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_sensor_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:text="OFF"/>
            <Button
                android:id="@+id/btn_sensor_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON"/>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_frekuensi"
            android:layout_below="@+id/ly_btn_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_frekuensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="FREKUENSI : " />
            <TextView
                android:id="@+id/tx_nilai_frekuensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_btn_sensor"
            android:layout_below="@id/ly_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_frekuensi_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:text="OFF"/>
            <Button
                android:id="@+id/btn_frekuensi_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ON"/>
        </LinearLayout>





    </RelativeLayout>



</LinearLayout>